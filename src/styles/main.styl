@import 'nib' // CSS3 extensions for Stylus: http://visionmedia.github.io/nib/
@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic)


// variables!

slide_width = 680px
slide_height = 420px
slide_background = #eaeaea

slide_transition_length = .3s
slide_transition_easing = ease
slide_transition_rotate_y = 10deg
// Safari bugs out on 3d transform-origins, so we have to fake it
slide_transition_nudge_x = -100px

bullet_transition_length = .3s
bullet_transition_easing = ease
bullet_transition_translate_x = 16px

play_size = 100px

// base

html, body
  font-family: 'Lato', sans-serif
  background: slide_background
  width: 100%
*
  box-sizing: border-box
  margin: 0
  padding: 0

@media print
  *
    -webkit-print-color-adjust: exact

@page
  size: landscape
  margin: 0
.pull-right
  float: right
  position: absolute
  right: 4em
// bespoke.js layout styles

article
  transition: background slide_transition_length slide_transition_easing
  display: none
  &.bespoke-parent
    display: block
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    overflow: hidden
    @media print
      overflow: visible
      position: static
    perspective: 600px

.bespoke-slide
  transition:
    transform slide_transition_length slide_transition_easing,
    opacity slide_transition_length slide_transition_easing,
    background slide_transition_length slide_transition_easing
  transform-origin: 50% 50% 0
  backface-visibility: hidden
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  width: slide_width
  height: slide_height
  position: absolute
  top: 50%
  margin-top: (slide_height / 2) * -1
  left: 50%
  margin-left: (slide_width / 2) * -1
  background: slide_background
  padding: 40px
  border-radius: 0
  @media print
    zoom: 1 !important // disable bespoke-scale
    height: 743px // seems to correspond with an A4, landscape page height
    width: 100%
    page-break-before: always
    position: static
    margin: 0
  &.left

      article

          padding-left: 10%
          text-align: left

      li

          list-style-position: inside
          margin-left: 40px
          list-style: disc

          .aside

              margin-left: 20px
  article

      vertical-align: middle
      display: table-cell
      width: 50%

.bespoke-before
  transform: translateX(slide_transition_nudge_x * -1) translateX(slide_width / -2) rotateY(slide_transition_rotate_y * -1) translateX(slide_width / -2)

.bespoke-after
  transform: translateX(slide_transition_nudge_x) translateX(slide_width / 2) rotateY(slide_transition_rotate_y) translateX(slide_width / 2)
  @media print
    transform: none

.bespoke-inactive
  opacity: 0
  pointer-events: none
  @media print
    opacity 1

.bespoke-active
  opacity: 1

// bespoke-bullet styles

.bespoke-bullet
  transition: all bullet_transition_length bullet_transition_easing

.bespoke-bullet-inactive
  opacity: 0
  li&
    transform: translateX(bullet_transition_translate_x)
  @media print
    opacity: 1

.bespoke-bullet-active
  opacity: 1

// bespoke-scale styles

.bespoke-scale-parent
  perspective: 600px
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  @media print
    transform: none !important


pre, code
  text-transform: none
  font-family: Consolas, Monaco, "Courier New", Courier, monospace
  line-height: 1.25
  font-weight: 100

pre.snippet
  display: inline-block
  background: darken( #06b3db, 10% )
  text-align: left
  font-size: 13px
  max-width: 960px
  padding: 20px
  margin: 20px auto 0 auto

  .comment

      opacity: 0.5
      color: #fff

.code
    //$padding: 20px
    //+box-sizing( content-box )
    //background: #272822
    text-align: left
    font-size: 9px
    overflow: scroll
    padding: 20px
    padding-right: 0px
    height: 100%
    width: 100%
    left: 0
    top: 0
    position: absolute
    .diff
      border: 1px dashed fade-out( #fff, 0.8 )
      display: inline-block
      //border-bottom: $border
      //border-top: $border
      background: darken( #272822, 2% )
      position: relative
      padding: 10px 0 10px 00px
      margin: 10px 0
      width: 100%
      left: -20px
.demo
  background: #fff
  // position: absolute
  height: 100%
  width: 100%
  right: 0
  top: 0
.demo-link
  font-size: 10px
.play
  background: fade-out( #06b3db, 0.05 )
  font-size: 48px
  position: absolute
  height: 100%
  width: 100%
  right: 0
  top: 0
  &:after
    border-radius( 3px )
    background: fade-out( #06b3db, 0.2 )
    margin-left: play_size * -0.5
    margin-top: play_size * -0.5
    line-height: play_size
    font-size: 48px
    position: absolute
    content: '\25B6'
    display: block
    height: play_size
    width: play_size
    left: 50%
    top: 50%

.split
  .code, .demo
      width: 50%
  .play
      width: 50%
.diagram

    background-position: center
    background-repeat: no-repeat
    background-size: contain

    &.right-center

        background-position: right center

    &.left-center

        background-position: left center
// prism styles

pre
  //padding: 26px !important
  border-radius: 8px

